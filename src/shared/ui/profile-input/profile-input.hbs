<div class="input__container">
  <label class="input__label">
    <input
      type="{{type}}"
      placeholder=" "
      class="text-xsmall input input__{{className}} input__float-label"
      value="{{value}}"
      name="{{name}}"
      autocomplete="off"
    />
    <span class="input__placeholder">{{placeholder}}</span>
    {{#if error}}
      <span class="text-xxsmall input__error">{{error}}</span>
    {{/if}}
  </label>
</div>
