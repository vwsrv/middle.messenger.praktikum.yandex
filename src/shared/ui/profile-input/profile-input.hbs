<div class="input__container">
  <label class="input__label">
    <input
      type="{{type}}"
      placeholder=" "
      class="text-xsmall input input__{{name}} input__float-label"
      value="{{value}}"
    />
    <span class="input__placeholder">{{placeholder}}</span>
    <span class="text-xxsmall input__error">{{error}}</span>
  </label>
</div>
