<div class="chat-page">
    {{#if chats}}
        {{> ChatSideBar chats=chats }}

        <div class="chat-main">
            {{#if activeChat}}
                <div class="chat-messages_header">
                    {{> ChatHeader
                            profileName=activeChat.profileName
                            profileAvatar=activeChat.avatar
                    }}
                </div>
                <div class="chat-messages">
                    {{> ChatDialog
                            createDate="Сегодня"
                            messages=activeChat.messages
                    }}
                </div>
                <div class="chat-messages_textarea">
                    {{> ChatTextArea }}
                </div>
            {{else}}
                {{> ChatDialogEmpty }}
            {{/if}}
        </div>
    {{else}}
        {{> ChatSideBar chats=chats }}

        {{> ChatDialogEmpty }}
    {{/if}}
</div>
